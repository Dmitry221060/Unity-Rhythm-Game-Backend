{
  "compilerOptions": {
      "target": "es2022",
      "rootDir": "./src",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "esModuleInterop": true,
      "moduleResolution": "nodenext",
      "module": "nodenext",
      "outDir": "./dist",
      "baseUrl": "./",
      "sourceMap": true,
      "resolveJsonModule": true,
      "strict": true,
      "allowJs": true
  },
  "include": ["./src"]
}
