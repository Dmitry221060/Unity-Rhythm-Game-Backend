{
  "compilerOptions": {
      "target": "es2018",
      "lib": [
          "es2020",
          "dom"
      ],
      "rootDir": "./src",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "outDir": "./dist",
      "resolveJsonModule": true,
      "strict": true,
      "allowJs": true
  },
  "include": ["./src"]
}
